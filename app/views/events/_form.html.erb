  <div class="row">
    <div class="col-sm-2"><%= image_tag(@event.brand_url(:thumb)) if @event.brand? %></div>
    <div class="col-sm-8 ">
      <h3><%= @event.title %></h3>
      <%= link_to 'Back', events_path, class:"btn btn-info btn-small" %><br><br>
    </div>
    <div class="col-sm-2">
    </div>
  </div>

  <div class="row">
   <div class="col-sm-2"></div>
    <div class="col-sm-8">
      <%= form_for(@event) do |f| %>
        <% if @event.errors.any? %>
          <div id="error_explanation">
            <h2><%= pluralize(@event.errors.count, "error") %> prohibited this event from being saved:</h2>
            <ul><% @event.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
            </ul>
          </div>
        <% end %>
        <table class="table">
        <tr>
          <td><%= f.label :title %></td>
          <td><%= f.text_field :title %></td></tr>
        <tr>
          <td><%= f.label :start_date %></td>
          <td><%= f.datetime_select :start_date %></td></tr>
        <tr>
          <td><%= f.label :end_date %></td>
          <td><%= f.datetime_select :end_date %></td></tr>
        <tr>
          <td><%= f.label :location %></td>
          <td><%= f.text_field :location %></td></tr>
        <tr>
          <td><%= f.label :agenda %></td>
          <td><%= f.text_area :agenda %></td></tr>
        <tr>
          <td><%= f.label :address %></td>
          <td><%= f.text_area :address %></td></tr>
        <tr>
          <td><%= f.label :organizer_id %></td>
          <td><%= f.text_area :organizer_id %></td></tr>
        <tr>
          <td><strong>Tags</strong></td>
          <td><%= f.text_field :all_tags %>
          <br \>
          <%= f.label :all_tags, "List All Tags, separate each tag by a comma" %></td></tr>
        <tr>
          <td><strong>Image</strong></td>
          <td>
            <%= f.file_field :brand %>
            <%= f.label :brand_url.to_s if :brand_url.present? %>
            <%= f.check_box :remove_brand %> 
            <%= f.label :remove_brand, "Remove image" %></td></tr>
</table>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
<br><br>
